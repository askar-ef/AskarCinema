<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/logo_cinema"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/askarcinema"
            android:paddingRight="20dp"
            />

        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Detail"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginVertical="12dp"
            android:layout_toRightOf="@id/logo_cinema"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_movie_photo"
            android:layout_width="280dp"
            android:layout_height="400dp"
            android:src="@drawable/bgapp"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginTop="24dp"
        android:textSize="42dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/txt_movie_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textColor="@color/primaryColor"
        />

    <TextView
        android:id="@+id/txt_movie_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:text="coba coba coba coba coba coba"
        android:textSize="16dp"
        />
</LinearLayout>